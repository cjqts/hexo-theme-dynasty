nav#pagination
    margin: auto

.fancybox__backdrop
    backdrop-filter: var(--blur)
    background: var(--nav-bg) !important
    transition: .2s

.fancybox__caption
    color: var(--font) !important

.extend.next, .extend.prev
    box-shadow: none !important

#post h1, h2, h3, h4, h5, h6
    &:before
        padding: 0.2rem
        background: var(--font)
        color: var(--theme)
        content: '\e869'
        border-radius: .8rem
        margin-right: .5rem
        font-family: 'dys'

.search-button-text
    font-size: 25px

.el-notification
    background-color: var(--nav-bg) !important
    backdrop-filter: var(--blur)
    .el-notification__title
        color: var(--font) !important
    .el-notification__content
        color: var(--font) !important