#console_open_close_btn
    position: fixed
    border-radius: 100vh
    width: 40px
    height 40px
    padding: 4px
    z-index: 10002
    background: var(--theme)
    bottom: 97px
    border: 2px solid #e3e8f7
    right: 7px

[data-theme="dark"] #console_open_close_btn
    border: 2px solid #3d3d3f

#console_open_close_btn i
    line-height: 2
    position: relative
    bottom: 7%
    align-items: center
    display: flex
    justify-content: center
    color: var(--heo-font)

#console-pannel
    position: fixed
    bottom -205px
    z-index 10000
    display: block
    transition: .2s
    color: #fff
    width: auto
    height: 250px
    box-shadow: 0 0 0 1px var(--border)
    background: var(--theme)
    right: -40px
    border-radius: 23px 0 0 0
    font-weight: 600
    #pannel
      align-items: center
      flex-direction: column
      display flex
      width 130px
      justify-content: center
      margin: 30px 0 0 0
      border-radius: 23px 0 0 0
      padding: 10px
      box-shadow: 6px 8px 12px -3px var(--shadow)

#console-pannel .console-item .console-button
    display: flex
    justify-content: center
    text-wrap nowrap
    align-items: center
    text-align: center

#console-pannel .console-item
    width: 80px
    color var(--font)
    height 50px
    display flex
    align-items: center
    margin: 0 1%
    border-radius: 20px
    justify-content: center

#console-pannel .console-item .console-button i
  font-size: 20px
  height 40px
  margin-right: 5px
  display: flex
  align-items: center
  justify-content: center

#console-pannel .close-button
    right: 20px
    position: absolute

.bottombtns
    z-index: 10001;
    position: fixed;
    box-shadow: -.5px -.5px 0 .5px var(--border)
    align-items: center;
    right: 0;
    background: var(--theme);
    transition: .2s
    height: 45px;
    width: 95px;
    bottom: 0;
    border-radius: 23px 0 0 0;
    display: flex;
    padding: 0 0 0 3px

.bottombtns div
    width: 45px;
    display: flex;
    align-items: center;
    justify-content: center;

.bottombtns i
    font-size: 22px;

[data-theme="dark"] 
  .consolebtn, .totopbtn
    i
      color:  #fff !important

.conbtn a
  span#percent
    justify-content: center
    width 100%
    align-items: center
    display: flex
    font-weight: 700
    scale: 1
    transition: .2s
    color: #fff
    text-shadow: 2px 1px #000
    margin: auto
    z-index inherit
    position: relative
  i
    justify-content: center
    align-items: center
    display: flex
    color: #fff
    text-shadow: 2px 1px #000
    scale: 0
    transition: .2s
    left 7px
    font-weight: 700
    margin: auto
    z-index inherit
    top: -6px
    position: absolute
.conbtn
  &:hover i
    scale: 1
  &:hover span#percent
    scale: 0

.consolebtn .main-hero-waves-area
    width: 100%
    height 50%
    position: absolute
    z-index: 0
    bottom: 0
    left: 0
    .parallax>use:nth-child(1)
      fill: #1a55ffbd
    .parallax>use:nth-child(2)
      fill: #1a55ff82
    .parallax>use:nth-child(3)
      fill: #1a55ff36
    .parallax>use:nth-child(4)
      fill: #1a55ff

[data-theme="dark"] .consolebtn .main-hero-waves-area
    .parallax>use:nth-child(1)
      fill: #9A515Abd
    .parallax>use:nth-child(2)
      fill: #9A515A82
    .parallax>use:nth-child(3)
      fill: #9A515A36
    .parallax>use:nth-child(4)
      fill: #9A515A

main
  z-index 1