- const { darkmode } = theme

nav#nav
  #navbar
    if theme.nav.title.type === text
      span#blog_name
        a#site-name(href=url_for('/'))
          .title #[=theme.nav.title.title]
          i.dys.home
    else
      span#blog_name(style="margin-left:-5px;height:40px;width:40px")
        a#site-name(href=url_for('/'))
          img(src=url_for(theme.nav.title.title) style="width:40px;height:40px;border-radius:100vh;")

    .linea

    .nav-menus#nav-menus
      #toggle-menu(style='margin:0 10px 0 5px;')
        a.site-page(style='display:flex; align-items:center; height:35px;')
          i.dys.apps(style='font-size: 25px;')
          | 菜单

      !=partial('includes/header/menu_item', {}, {cache: true})

    .notebar#notebar

    div.nav-button
      a.site-page.social-icon.travel(href="https://travellings.cn/go.html" style='margin-right:10px')
        .search-button-text
          i.dys.huoche(style='font-size: 25px;margin-right: 5px')
          span 开往

    if (theme.algolia_search.enable || theme.local_search.enable)
      div.nav-button#search-button
        a.site-page.social-icon.search
          .search-button-text
            i.dys.searchico(style='font-size:25px')
            span 搜索
    else
      div.nav-button
        a.site-page.social-icon.search
          .search-button-text
            i.dys.searchico(style='font-size:25px')
            span 未开启